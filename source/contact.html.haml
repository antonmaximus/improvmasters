= partial('./layouts/header')

%section.block1
  .container
    .row
      .col-xs-12.col-sm-12
        %h1 Contact Us!
        %p 
          Email us at
          %a#aj-magic [Enable JavaScript Pls.]
          OR fill out the form below.
        .row
          .col-sm-12.col-md-6
            %form#forBrace{method:'POST', action:''}
              .form-group
                %label{for:'exampleInputName'} Name
                %input.form-control#exampleInputName{name:'name', type:'', placeholder:'Enter name', required:'true'}
              .form-group
                %label{for:'exampleInputEmail1'} Email address
                %input.form-control#exampleInputEmail1{name:'_replyto', type:'email', placeholder:'Enter email', required:'true'}      
              .form-group
                %label{for:'exampleTextArea'} Message
                %textarea.form-control#exampleInputEmail1{name:'message', type:'email', rows:'5', required:'true'}   
              %button.btn.btn-primary{type:'submit'} Submit

:javascript
  ;(function() { 
    function nextChar(c) {
        return String.fromCharCode(c.charCodeAt(0) + 1);
    }
    var x = "mail" + "to" + ":";
    var y = "improv" + nextChar('l') + 'ast' + nextChar('d') + 'rs' + "\u0040g" + "mai" +"l\u002Eco" + nextChar('l');
    document.getElementById('aj-magic').href = x + y; 
    document.getElementById('aj-magic').innerHTML = y;

    var brace = 'http://forms.brace.io/'
    document.getElementById('forBrace').setAttribute('action', brace + y )

  })();
= partial('./layouts/footer')
